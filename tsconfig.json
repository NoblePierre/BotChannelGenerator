{
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": true,
        "module": "commonjs",
        "outDir": "./dist",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2017",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "files": [
        "src/main.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}